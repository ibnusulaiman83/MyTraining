@model MyTraining.Models.UpdateEmployeeViewModel

@{
}
<h1>Update  Employee </h1>
<hr />

<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">ID</label>
        <input type="text" class="form-control" readonly asp-for="Id">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date of Birth </label>
        <input type="date" class="form-control" asp-for="BirthDay">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" asp-controller ="Employees" asp-action="Delete" class="btn btn-danger">Delete Record</button>
</form>
