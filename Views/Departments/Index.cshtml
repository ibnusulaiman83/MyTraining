@model List<MyTraining.Models.Domain.Department>

<h1>Departments </h1>

<a asp-controller="Departments" asp-action="Add" class="btn btn-success btn-sm">Add New Department </a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Department Name</th>           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.DepartmentName</td>
                <td><a href="/Employees/View/@department.Id">View Info</a></td>
            </tr>
        }
    </tbody>
</table>